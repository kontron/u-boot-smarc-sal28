/dts-v1/;

#include "fsl-ls1028a.dtsi"

/ {
	u-boot,dm-pre-reloc;
	model = "Kontron SMARC-sAL28 Board";
	compatible = "kontron,sl28", "fsl,ls1028a";

	aliases {
		serial0 = &serial0;
		serial1 = &serial1;
		spi0 = &fspi;
		spi1 = &dspi2;
		mmc0 = &esdhc0;
		mmc1 = &esdhc1;
		i2c0 = &i2c0;
		i2c1 = &i2c3;
		i2c2 = &i2c4;
		rtc0 = &rtc;
		watchdog0 = &cluster1_core0_watchdog;
		watchdog1 = &cluster1_core1_watchdog;
		watchdog2 = &watchdog0;
		fixup0 = &enetc0;
		fixup1 = &enetc1;
		fixup2 = &enetc2;
		fixup3 = &ethsw;
	};

	chosen {
		stdout-path = &serial0;
	};

	config {
		u-boot,spl-payload-offset = <0x30000>;
		load-environment = <1>;
	};
};

&sysclk {
	u-boot,dm-pre-reloc;
};

&esdhc0 {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&esdhc1 {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&serial0 {
	u-boot,dm-pre-reloc;
	clock-frequency = <200000000>;
};

&fspi {
	u-boot,dm-pre-reloc;
	bus-num = <0>;
	status = "okay";
	num-cs = <2>;

	qflash0: w25q32jw@0 {
		u-boot,dm-pre-reloc;
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-flash";
		spi-max-frequency = <133000000>;
		reg = <0>;
	 };
};

&dspi2 {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&enetc0 {
	status = "okay";
	phy-mode = "sgmii";
	phy-handle = <&enetc_phy1>;
};

&enetc1 {
	status = "okay";
	phy-mode = "rgmii";
	phy-handle = <&enetc_phy0>;
};

&enetc2 {
	status = "disabled";
};

&enetc6 {
	status = "disabled";
};

&ethsw {
	status = "disabled";
	port@0 {
		status = "okay";
		phy-mode = "sgmii";
	    phy-handle = <&enetc_phy1>;
	};
	port@1 {
		status = "okay";
		phy-mode = "sgmii";
	    phy-handle = <&enetc_phy0>;
	};
	port@2 {
		status = "disabled";
		phy-mode = "sgmii";
	};
	port@3 {
		status = "disabled";
		phy-mode = "sgmii";
	};
};

&mdio0 {
	status = "okay";
	enetc_phy0: phy@4 {
		reg = <4>;
	};
	enetc_phy1: phy@5 {
		reg = <5>;
	};
};

&i2c0 {
	status = "okay";
	rtc: rtc@32 {
		compatible = "microcrystal,rv8803";
		reg = <0x32>;
	};

	watchdog0: cpld_watchdog@4a {
		compatible = "kontron,sl28cpld-wdt";
		reg = <0x4a>;
	};
};

&i2c3 {
	status = "okay";
};

&i2c4 {
	status = "okay";
};

&sata {
	status = "okay";
};

&usb1 {
	status = "okay";
};

&usb2 {
	status = "okay";
};
